<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<!-- logout.ejs -->
<div class="logout-container">
  <!-- Logout Button -->
  <button class="logout-btn" onclick="showLogoutModal()">
    <i class="fas fa-sign-out-alt"></i> Logout
  </button>

  <!-- Logout Confirmation Modal -->
  <div id="logoutModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <i class="fas fa-door-open modal-icon"></i>
        <h3>Ready to Leave?</h3>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to log out?</p>
      </div>
      <div class="modal-footer">
        <a href="/" class="modal-btn confirm-btn">
          <i class="fas fa-check-circle"></i> Continue
        </a>
        <button onclick="hideLogoutModal()" class="modal-btn cancel-btn">
          <i class="fas fa-check-circle"></i> Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  /* Main Container */
  .logout-container {
    position: relative;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Logout Button */
  .logout-btn {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 25px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .logout-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    background: linear-gradient(135deg, #c0392b, #e74c3c);
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(3px);
    animation: fadeIn 0.3s ease-out;
  }

  .modal-content {
    background: white;
    margin: 15% auto;
    padding: 25px;
    border-radius: 12px;
    width: 350px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    transform: translateY(-20px);
    opacity: 0;
    animation: slideIn 0.3s ease-out forwards;
  }

  .modal-header {
    text-align: center;
    margin-bottom: 20px;
  }

  .modal-icon {
    font-size: 2.5rem;
    color: #e74c3c;
    margin-bottom: 10px;
  }

  .modal-header h3 {
    color: #2c3e50;
    margin: 0;
    font-size: 1.5rem;
  }

  .modal-body p {
    color: #7f8c8d;
    text-align: center;
    line-height: 1.5;
    margin-bottom: 25px;
  }

  .modal-footer {
    display: flex;
    justify-content: center;
    gap: 15px;
  }

  .modal-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.95rem;
    justify-content: center;
  }

  .confirm-btn {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white;
  }

  .confirm-btn:hover {
    background: linear-gradient(135deg, #c0392b, #e74c3c);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(231, 76, 60, 0.3);
  }

  .cancel-btn {
    background: linear-gradient(135deg, #02db09, #02ae08);
    color: #000000;
  }

  .cancel-btn:hover {
    background: linear-gradient(135deg, #02db09, #02ae08);
    color: #ebf1f7;
  }

  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideIn {
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Responsive Design */
  @media (max-width: 480px) {
    .modal-content {
      width: 85%;
      margin: 30% auto;
    }
    
    .modal-footer {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>

<script>
  function showLogoutModal() {
    const modal = document.getElementById('logoutModal');
    modal.style.display = 'block';
    document.body.style.overflow = 'hidden'; // Prevent scrolling
  }

  function hideLogoutModal() {
    const modal = document.getElementById('logoutModal');
    modal.style.display = 'none';
    document.body.style.overflow = 'auto'; // Re-enable scrolling
  }

  // Close modal when clicking outside
  window.onclick = function(event) {
    const modal = document.getElementById('logoutModal');
    if (event.target == modal) {
      hideLogoutModal();
    }
  }
</script>